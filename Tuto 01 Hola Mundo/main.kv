<Contenedor_01>:
	id: ContenedorUno
	orientation: "vertical"
	cols:4
	canvas:
		Color:
			rgb: 1,0,0
		Rectangle:
			size:self.size
			pos:self.pos
    Button:
    	id: botonUno
        text: '1'
        on_press: ContenedorUno.mostrarBoton(1)
    Button:
        text: '2'
        on_press: ContenedorUno.mostrarBoton(2)
        # rgba no se bn que formato toma
        background_normal: ''
    	background_color: 10, .3, .4, .85
    Button:
        text: '3'
        on_press: ContenedorUno.mostrarBoton(3)
    Button:
        text: '4'
        on_press: ContenedorUno.mostrarBoton(4)

